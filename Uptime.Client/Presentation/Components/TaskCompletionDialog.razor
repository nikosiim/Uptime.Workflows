<MudDialog>
    <TitleContent>@MudDialog.Title</TitleContent>
    <DialogContent>
        <MudText Typo="Typo.subtitle1">Tööülesande täitmine</MudText>
        @if (EventType == WorkflowEventType.TaskDelegated)
        {
            <MudSelect T="string" Label="Ülesande saaja" Variant="Variant.Outlined" Placeholder="Vali kasutaja" @bind-Value="_delegatedUser">
                @foreach (string user in AvailableUsers)
                {
                    <MudSelectItem T="string" Value="@user">@user</MudSelectItem>
                }
            </MudSelect>
        }

        <MudTextField T="string" Label="Kommentaar" Variant="Variant.Outlined" @bind-Value="_comment" Lines="5" />
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="OnSaveClick">Salvesta</MudButton>
        <MudButton Variant="Variant.Outlined" OnClick="OnCancelClick">Loobu</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private string? _comment;
    private string? _delegatedUser;

    [Parameter] public string? Document { get; set; }
    [Parameter] public string? AssignedTo { get; set; }
    [Parameter, EditorRequired] public int TaskId { get; set; }
    [Parameter, EditorRequired] public int WorkflowId { get; set; }
    [Parameter, EditorRequired] public WorkflowEventType EventType { get; set; }

    [Inject] protected IMediator Mediator { get; set; } = null!;
    [Inject] protected IState<WorkflowState> WorkflowState { get; set; } = null!;

    [CascadingParameter] 
    protected IMudDialogInstance MudDialog { get; set; } = null!;
    
    protected virtual async Task OnSaveClick()
    {
        var input = new Dictionary<string, string?>();

        string taskEditor = WorkflowState.Value.CurrentUser ?? "System";

        input.SetValue(GlobalConstants.TaskStorageKeys.TaskComment, _comment);
        input.SetValue(GlobalConstants.TaskStorageKeys.TaskEditor, taskEditor);
        input.SetValue(GlobalConstants.TaskStorageKeys.TaskResult, EventType.ToString());

        if (EventType == WorkflowEventType.TaskDelegated)
        {
            input.SetValue(GlobalConstants.TaskStorageKeys.TaskDelegatedTo, _delegatedUser);
        }

        var command = new AlterTaskCommand
        {
            WorkflowId = WorkflowId,
            TaskId = TaskId,
            Input = input
        };

        Result<bool> result = await Mediator.Send(command);
        MudDialog.Close(DialogResult.Ok(result.Succeeded));
    }

    protected virtual void OnCancelClick()
    {
        MudDialog.Cancel();
    }
}