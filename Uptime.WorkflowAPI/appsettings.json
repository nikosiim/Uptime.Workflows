{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "UptimeDbConnection": "Server=(localdb)\\MSSQLLocalDB;Database=WorkflowApiDB;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "SharePointNotifier": {
    "RelativePath": "/_vti_bin/Uptime.Notifier/WorkflowNotify.svc/",
    // optional segment names if you like them configurable
    "Endpoints": {
      "Started": "workflows/started",
      "TasksCreated": "workflows/tasks-created",
      "Completed": "workflows/completed"
    }
  }
}